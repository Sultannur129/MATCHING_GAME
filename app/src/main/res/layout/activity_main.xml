<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_veri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Veri gir...!"
        android:minHeight="48dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gonder"
        android:layout_margin="15dp"
        android:layout_below="@+id/edit_veri"
        android:text="Veri Gönder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_oku"
        android:layout_below="@+id/btn_gonder"
        android:layout_margin="15dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:hint="Veri burada Görülecek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_oku"
        android:layout_margin="15dp"
        android:layout_below="@+id/txt_oku"
        android:text="Veri Oku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cikis"
        android:layout_margin="15dp"
        android:layout_below="@+id/btn_oku"
        android:text="Çıkış Yap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>