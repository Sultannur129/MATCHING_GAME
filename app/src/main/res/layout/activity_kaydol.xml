<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GirisEkraniActivity"
    android:background="@drawable/harrypotter">



    <EditText

        android:id="@+id/edit_usernamek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Kullanıcı Adı"
        android:minHeight="48dp" />


    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/edit_emailk"
        android:layout_below="@+id/edit_usernamek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Email"
        android:minHeight="48dp" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/edit_sifrek"
        android:layout_below="@+id/edit_emailk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Şifre"
        android:minHeight="48dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Kaydol"
        android:layout_margin="15dp"
        android:layout_below="@+id/edit_sifrek"
        android:text="Kaydol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_HesapVar"
        android:layout_below="@+id/btn_Kaydol"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:text="Hesabım Var..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>

</RelativeLayout>