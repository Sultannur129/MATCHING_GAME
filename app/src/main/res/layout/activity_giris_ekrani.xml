<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/harrypotter"
    tools:context=".GirisEkraniActivity">


    <EditText

        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Kullanıcı Adı"

        android:minHeight="48dp" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/edit_sifre"
        android:layout_below="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"

        android:hint="Şifre"
        android:minHeight="48dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_girisYap"
        android:layout_margin="15dp"
        android:layout_below="@+id/edit_sifre"
        android:text="Giriş Yap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_HesapYok"
        android:layout_below="@+id/btn_girisYap"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:text="Hesabım Yok..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txt_SifremiUnuttum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifremi Unuttum"
        android:layout_margin="15dp"
        android:layout_below="@+id/btn_girisYap"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/txt_Veri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_HesapYok"
        android:textSize="18sp"
        />




</RelativeLayout>